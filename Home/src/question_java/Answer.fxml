<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <Label text="해설" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding></Label>
   </top>
   <bottom>
      <Pane prefHeight="55.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Button id="btnNext" alignment="CENTER" layoutX="117.0" layoutY="13.0" text="다음문제" />
            <Button id="btnClose" alignment="CENTER" layoutX="225.0" layoutY="13.0" text="종료" />
         </children>
      </Pane>
   </bottom>
   <center>
      <VBox prefHeight="200.0" prefWidth="430.0" BorderPane.alignment="CENTER">
         <children>
            <Label id="answerLabel" alignment="CENTER" contentDisplay="CENTER" prefWidth="430.0" textAlignment="CENTER"
            		style="-fx-background-color: white; -fx-padding: 10;" >
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <font>
                  <Font name="Arial Black" size="24.0" />
               </font>
               <textFill>
                  <LinearGradient endX="1.0" endY="1.0">
                     <stops>
                        <Stop color="#ff0000ed" />
                        <Stop color="#ff00a1" offset="1.0" />
                     </stops>
                  </LinearGradient>
               </textFill>
            </Label>
            <Label id="answerList" alignment="CENTER" contentDisplay="CENTER" prefHeight="150.0" prefWidth="430.0" textAlignment="CENTER">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Label>
         </children>
      </VBox>
   </center>
</BorderPane>
